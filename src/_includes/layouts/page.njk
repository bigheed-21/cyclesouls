{% extends 'layouts/base.njk' %}

{# Intro content #}
{% set introHeading = title %}
 
{% block content %} 
   
  <main id="main-content" tabindex="-1">
   
    <article class="[ post ] [ h-entry ]">
      {% include "partials/components/intro.njk" %}

      <div class="[ post__body ] [ inner-wrapper ] [ leading-loose pad-top-900 pad-bottom-900 text-500 ] [ sf-flow ] [ e-content ]">
        {{ content | safe }}
      </div>
    </article>
  </main>

  {% if title == 'About' %}
    <figure class="image-full">  
      <img src="../images/about.jpg" alt="A montage of photos including Portobello beach, an Outer Hebridean beach and an Italian river" />
    </figure>
  {% endif %}

{% endblock %}

{{ content | safe }}
